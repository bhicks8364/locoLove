<div class="col-md-8 well">
  <%= simple_form_for(@event) do |f| %>
    <%#= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :location %>
      <%= f.input :start_time, as: :date, html5: true %>
      <%= f.input :end_time, as: :date, html5: true %>
      <%= f.input :price %>
      <%= f.input :description %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>

